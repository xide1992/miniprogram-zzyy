<view class='base-padding'>
<view class='panel'>
  <view class='row'>
    
  <navigator url='/pages/list/list?cateUrl={{item.categoryUrl}}' class='col-6 item' 
      wx:for="{{result}}" wx:if="{{item.cateName !='全部'}}">
      <view class='row'>
        <view class='col-4'>
          <image class='img-responsive' mode='widthFix' src='/images/cate-be-java.png'></image>
        </view>
        <view class='col-8'>
          <view class='ellipsis-1row'>{{item.categoryName}}</view>
          <view class='text-muted'> {{item.count}}篇</view>
        </view>
      </view>
    </navigator>
  </view>
</view>

</view>
<i-toast id="toast" />




